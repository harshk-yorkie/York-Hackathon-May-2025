{
  "name": "jira-assistant",
  "displayName": "Jira Assistant",
  "description": "A Jira assistant plugin for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jira-assistant.authenticate",
    "onCommand:jira-assistant.fetchTicket",
    "onCommand:jira-assistant.listProjects",
    "onCommand:jira-assistant.createIssue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jira-assistant.authenticate",
        "title": "Jira: Configure Settings"
      },
      {
        "command": "jira-assistant.fetchTicket",
        "title": "Jira: Fetch Ticket"
      },
      {
        "command": "jira-assistant.listProjects",
        "title": "Jira: List Projects"
      },
      {
        "command": "jira-assistant.createIssue",
        "title": "Jira: Create Issue"
      }
    ],
    "configuration": {
      "title": "Jira Assistant",
      "properties": {
        "jiraAssistant.jiraUrl": {
          "type": "string",
          "default": "",
          "description": "Your Jira instance URL (e.g., https://your-domain.atlassian.net)"
        },
        "jiraAssistant.email": {
          "type": "string",
          "default": "",
          "description": "Your Atlassian account email address"
        },
        "jiraAssistant.apiToken": {
          "type": "string",
          "default": "",
          "description": "Your Jira API token (get it from https://id.atlassian.com/manage-profile/security/api-tokens)"
        },
        "jiraAssistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for LLM-powered requirement analysis"
        },
        "jiraAssistant.useLLM": {
          "type": "boolean",
          "default": true,
          "description": "Whether to use LLM for requirement analysis (falls back to local parsing if disabled or if LLM fails)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4"
  }
}
